# Server Configuration
PORT=5000
SERVER_PORT=5000
HOST=0.0.0.0
BASE_URL=http://localhost:5000
SESSION_SECRET=your-secure-session-secret-here
CORS_ORIGIN=*

# App Branding Configuration (Override defaults for white-label deployment)
APP_NAME=NestMap
PRIMARY_COLOR=#3B82F6
SECONDARY_COLOR=#64748B
ACCENT_COLOR=#10B981
COMPANY_URL=yourcompany.com
SUPPORT_EMAIL=support@yourcompany.com
LOGO_URL=

# Database Configuration
DATABASE_URL=your-database-connection-string

# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-project-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key

# External Services Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o
MAPBOX_TOKEN=your-mapbox-access-token
VITE_MAPBOX_TOKEN=your-mapbox-access-token
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# Travel API Configuration
AMADEUS_API_KEY=your-amadeus-api-key
AMADEUS_API_SECRET=your-amadeus-api-secret
AMADEUS_TEST_API_KEY=your-amadeus-test-api-key
AMADEUS_TEST_API_SECRET=your-amadeus-test-api-secret

# Authentication Configuration
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret
GOOGLE_REDIRECT_URI=https://yourdomain.com/api/auth/google/callback
MICROSOFT_CLIENT_ID=your-microsoft-oauth-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-oauth-client-secret
MICROSOFT_REDIRECT_URI=https://yourdomain.com/api/auth/microsoft/callback

# Node Environment
NODE_ENV=production

# Deployment Configuration
# BASE_URL is automatically constructed from PORT if not specified
# For production deployments, always set BASE_URL explicitly:
# BASE_URL=https://yourdomain.com
# PORT is automatically detected from environment (Railway, Render, etc.)