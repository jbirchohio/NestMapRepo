# Remvana Environment Configuration
# Copy this file to .env and fill in your values

# === DATABASE ===
DATABASE_URL=postgresql://username:password@host:port/database

# === AUTHENTICATION SECRETS ===
# Generate secure random strings (32+ characters)
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters
SESSION_SECRET=your-super-secure-session-secret-minimum-32-characters
ENCRYPTION_KEY=your-32-character-encryption-key

# === APPLICATION CONFIG ===
NODE_ENV=development
PORT=5000

# Client URLs (update for production)
CLIENT_URL=http://localhost:5000
API_URL=http://localhost:5000

# === REQUIRED APIS ===
# OpenAI - AI features (https://platform.openai.com)
OPENAI_API_KEY=your-openai-api-key

# SendGrid - Email service (https://sendgrid.com)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=Remvana

# Stripe - Payments (https://stripe.com)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
VITE_STRIPE_PUBLIC_KEY=pk_test_your-stripe-public-key

# Duffel - Flight data (https://duffel.com)
DUFFEL_API_KEY=your-duffel-api-key

# === OPTIONAL APIS ===
# Google APIs - Maps & Calendar (https://console.cloud.google.com)
GOOGLE_MAPS_API_KEY=your-google-maps-key
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/api/workspace-integration/google/callback

# Microsoft 365 - Calendar & Email (https://portal.azure.com)
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:5000/api/workspace-integration/microsoft/callback

# Mapbox - Alternative maps (https://mapbox.com)
VITE_MAPBOX_TOKEN=your-mapbox-token

# OpenWeatherMap - Weather data and forecasts (https://openweathermap.org)
OPENWEATHERMAP_API_KEY=your-openweathermap-api-key

# TuGo - Travel advisories (requires registration)
TUGO_API_KEY=your-tugo-api-key

# Booking.com - Hotels (requires partner account)
BOOKING_COM_API_KEY=your-booking-com-key

# Amadeus - Alternative flight/hotel data (https://developers.amadeus.com)
AMADEUS_CLIENT_ID=your-amadeus-client-id
AMADEUS_CLIENT_SECRET=your-amadeus-client-secret

# Viator - Tours and activities booking (https://supplier.viator.com)
VIATOR_API_KEY=your-viator-api-key
VIATOR_PARTNER_ID=your-viator-partner-id
VIATOR_MCID=your-viator-mcid

# === CONFIGURABLE VALUES ===
# IRS Mileage Rate (2024 rate is $0.655/mile)
IRS_MILEAGE_RATE=0.655

# Emergency Numbers
LOCAL_EMERGENCY_NUMBER=911
COMPANY_EMERGENCY_NUMBER=+1-800-555-1234
EMBASSY_EMERGENCY_NUMBER=+1-202-555-1234

# === MONITORING (OPTIONAL) ===
# Sentry - Error tracking (https://sentry.io)
SENTRY_DSN=your-sentry-dsn

# === SECURITY (PRODUCTION) ===
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5000

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=60000

# === DEMO MODE ===
# Enable demo mode for public testing
ENABLE_DEMO_MODE=false
DEMO_RESET_INTERVAL=30

# === REMOVED APIS ===
# The following were removed as they require business partnerships:
# - Uber/Lyft (OAuth user consent required)
# - Hertz/Enterprise/Avis (business partners only)
# - Travel risk assessment APIs (no free public access)