{
    "extends":  "../tsconfig.base.json",
    "compilerOptions":  {
                            "module":  "NodeNext",
                            "moduleResolution":  "NodeNext",
                            "esModuleInterop":  true,
                            "strict":  true,
                            "skipLibCheck":  true,
                            "forceConsistentCasingInFileNames":  true,
                            "resolveJsonModule": true,
                            "allowSyntheticDefaultImports": true,
                            "allowImportingTsExtensions": true,
                            "outDir":  "../dist/server",
                            "rootDir":  "..",
                            "rootDirs":  [
                                             "..",
                                             "../shared"
                                         ],
                            "lib":  [
                                        "ES2022",
                                        "DOM"
                                    ],
                            "types":  [
                                          "jest",
                                          "node"
                                      ],
                            "typeRoots":  [
                                              "./node_modules/@types",
                                              "../node_modules/@types",
                                              "./src/types",
                                              "./types",
                                              "./src/@types"
                                          ],
                            "baseUrl":  ".",
                            "paths":  {
                                          "@server/*":  [
                                                            "./src/*"
                                                        ],
                                          "@db/*": [
                                                            "./db/*"
                                                        ],
                                          "@shared/*":  [
                                                            "../shared/*"
                                                        ],
                                          "@shared/types":  [
                                                                "../shared/types/index.ts"
                                                            ],
                                          "@shared/types/*":  [
                                                                  "../shared/types/*"
                                                              ],
                                          "@shared/src/*":  [
                                                               "../shared/src/*"
                                                           ],
                                          "@shared/types/auth/*":  [
                                                                       "../shared/types/auth/*"
                                                                   ]
                                      },
                            "resolveJsonModule":  true,
                            "allowSyntheticDefaultImports":  true,
                            "noUnusedParameters":  true,
                            "strictFunctionTypes":  true,
                            "strictBindCallApply":  true,
                            "noImplicitReturns":  true,
                            "composite":  true,
                            "declaration":  true,
                            "declarationMap":  true,
                            "target":  "ES2022",
                            "moduleDetection":  "force",
                            "verbatimModuleSyntax":  true,
                            "tsBuildInfoFile":  "./node_modules/.cache/tsbuildinfo/server.tsbuildinfo",
                            "allowImportingTsExtensions":  true,
                            "noEmit":  true
                        },
    "references":  [
                       {
                           "path":  "../shared"
                       }
                   ],
    "include":  [
                    "src/**/*.ts",
                    "db/**/*.ts",
                    "../vite.config.ts"
                ]
}
