{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "../",
    "baseUrl": "../",
    "paths": {
      "@server/*": ["server/src/*"],
      "@db/*": ["server/db/*"],
      "@shared/*": ["shared/dist/*"]
    },
    "types": ["jest", "node"],
    
    "allowImportingTsExtensions": true,
    "emitDeclarationOnly": true
  },
  "references": [{ "path": "../shared" }],
  "include": ["src", "db"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts", "../shared"]
}
