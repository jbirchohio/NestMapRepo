{
  "extends": "../tsconfig.base.json",
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./storage/**/*.ts",
    "./db/**/*.ts",
    "./utils/**/*.ts",
    "./config/**/*.ts",
    "./middleware/**/*.ts",
    "./routes/**/*.ts",
    "./services/**/*.ts",
    "./types/**/*.ts",
    "./index.ts",
    "./*.ts",
    "../shared/src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "../dist/server",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "types": ["node", "express", "express-serve-static-core", "jest"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types",
      "./types",
      "../node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@server/*": ["src/*"],

      "@shared/*": ["../shared/src/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "noImplicitReturns": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "target": "ES2022",
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/server.tsbuildinfo"
  },
  "references": [{"path": "../shared"}]
}
