{
  "name": "@server/api",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/main.mjs",
  "module": "dist/main.mjs",
  "types": "dist/main.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "dotenv -e ../.env npx tsx src/index.ts",
    "start": "dotenv -e ../.env node dist/index.mjs",
    "dev:watch": "dotenv -e ../.env tsup --watch & nodemon --watch dist --exec npm start",
    "test:trpc": "dotenv -e ../.env npx tsx src/test-trpc.ts",
    "clean": "node ../scripts/clean.mjs server",
    "typecheck": "tsc --noEmit",
    "migrate:up": "dotenv -e ../.env npx tsx scripts/run-migration.ts migrations/003_add_payment_tables.sql",
    "migrate:create": "drizzle-kit generate:pg --config=drizzle.config.ts",
    "db:init": "dotenv -e ../.env npx tsx scripts/init-db.ts"
  },
  "dependencies": {
    "@nestjs/config": "^4.0.2",
    "@sentry/node": "^9.42.0",
