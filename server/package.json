    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "injection-js": "^2.5.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.8",
    "openai": "^4.104.0",
