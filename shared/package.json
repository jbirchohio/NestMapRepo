{
  "name": "@shared/schema",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./auth/*": {
      "types": "./dist/auth/*.d.ts",
      "import": "./dist/auth/*.js"
    },
    "./validation/*": {
      "types": "./dist/validation/*.d.ts",
      "import": "./dist/validation/*.js"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
  },
  "dependencies": {
    "class-validator": "^0.14.0",
    "drizzle-orm": "^0.44.2"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  }
}
