{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "../dist/shared",
    "rootDir": ".",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/*"]
    },
    "target": "ES2022",
    "skipLibCheck": true,
    "strict": true,
    "tsBuildInfoFile": "./node_modules/.cache/tsbuildinfo/shared.tsbuildinfo"
  },
  "include": ["src/**/*.ts", "types/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"]
}
