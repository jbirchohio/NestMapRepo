{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    // Build settings
    "composite": true,
    "declaration": true,
    "outDir": "../dist/client",
    "rootDir": "..",
    "rootDirs": [".", "../shared/types"],
    
    // Module settings - align with Vite's expectations
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    
    // JSX settings
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    
    // Type checking
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    
    // Path aliases - ensure these match your Vite config
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"],
      "@client/*": ["./src/*"],
      "@/*": ["./src/*"]
    },
    
    // Type definitions
    "types": ["vite/client", "node"],
    "typeRoots": [
      "./node_modules/@types",
      "../node_modules/@types",
      "../shared/types"
    ],
    
    // Libraries
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    
    // Output
    "sourceMap": true,
    "inlineSources": true,
    "declarationMap": true,
    
    // Performance
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    
    // Compatibility
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true
  },
  
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "src/@types/**/*.d.ts",
    "../shared/types/**/*.ts",
    "../shared/types/**/*.d.ts",
    "../vite.config.ts"
  ],
  
  "exclude": [
    "node_modules",
    "dist",
    "**/*.spec.ts",
    "**/*.test.ts",
    "**/*.spec.tsx",
    "**/*.test.tsx"
  ]
}
