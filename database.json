  "production": {
    "driver": "pg",
    "host": "${DB_HOST}",
    "database": "${DB_NAME}",
    "user": "${DB_USER}",
    "password": "${DB_PASSWORD}",
    "port": "${DB_PORT}",
    "ssl": true,
    "schema": "public"
  }
